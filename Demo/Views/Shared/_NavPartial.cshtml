@{
    Console.WriteLine(Context.Request.Path.Value);
}
<nav class="navbar navbar-expand-lg navbar-light shadow-sm">
    <div class="container">
        <!-- Brand -->
        <a class="navbar-brand fw-bold d-flex align-items-center"
           asp-area="" asp-controller="Home" asp-action="Index">
            <i data-feather="layers" class="me-2 text-primary" style="width: 24px; height: 24px;"></i>
            Taid
        </a>

        <!-- Mobile Menu Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Desktop Nav -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center smooth-nav @(Context.Request.Path.Value == "/" || Context.Request.Path.Value?.ToLower().Contains("/home/index") == true ? "active" : "")" 
                       data-page="home"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        <i data-feather="home" class="me-2" style="width: 16px; height: 16px;"></i>
                        Home
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    if(User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center smooth-nav @(Context.Request.Path.Value?.ToLower().Contains("/instructor") == true ? "active" : "")"
                               data-page="instructors"
                               asp-area="" asp-controller="Instructor" asp-action="Index">
                                <i data-feather="users" class="me-2" style="width: 16px; height: 16px;"></i>
                                Instructors
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center smooth-nav @(Context.Request.Path.Value?.ToLower().Contains("/trainee") == true ? "active" : "")"
                               data-page="trainees"
                               asp-area="" asp-controller="Trainee" asp-action="Index">
                                <i data-feather="users" class="me-2" style="width: 16px; height: 16px;"></i>
                                Trainees
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center smooth-nav @(Context.Request.Path.Value?.ToLower().Contains("/adminchat") == true ? "active" : "")"
                               data-page="chat"
                               asp-area="" asp-controller="AdminChat" asp-action="Index">
                                <i data-feather="message-circle" class="me-2" style="width: 16px; height: 16px;"></i>
                                Chat
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center smooth-nav @(Context.Request.Path.Value?.ToLower().Contains("/course") == true ? "active" : "")"
                           data-page="courses"
                           asp-area="" asp-controller="Course" asp-action="Index" asp-route-deptId=0>
                            <i data-feather="book-open" class="me-2" style="width: 16px; height: 16px;"></i>
                            Courses
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center smooth-nav @(Context.Request.Path.Value?.ToLower().Contains("/home/privacy") == true ? "active" : "")"
                       data-page="privacy"
                       asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i data-feather="shield" class="me-2" style="width: 16px; height: 16px;"></i>
                        Privacy
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">                    
                @if(User.Identity.IsAuthenticated == false)
                {
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center smooth-nav @(Context.Request.Path.Value?.ToLower().Contains("/account/login") == true ? "active" : "")"
                           data-page="login"
                           asp-area="" asp-controller="Account" asp-action="Login">
                            <i data-feather="log-in" class="me-2" style="width: 16px; height: 16px;"></i>
                            Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center smooth-nav @(Context.Request.Path.Value?.ToLower().Contains("/account/register") == true ? "active" : "")"
                           data-page="register"
                           asp-area="" asp-controller="Account" asp-action="RegisterAdmin">
                            <i data-feather="user-plus" class="me-2" style="width: 16px; height: 16px;"></i>
                            Register
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center smooth-nav @(Context.Request.Path.Value?.ToLower().Contains("/account/logout") == true ? "active" : "")"
                           data-page="logout"
                           asp-area="" asp-controller="Account" asp-action="Logout">
                            <i data-feather="log-out" class="me-2" style="width: 16px; height: 16px;"></i>
                            Logout
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center px-3">
                        <div class="d-flex align-items-center">
                            <i data-feather="user" class="me-2 text-primary" style="width: 16px; height: 16px;"></i>
                            <span class="text-secondary">Hello, @User.Identity.Name</span>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
