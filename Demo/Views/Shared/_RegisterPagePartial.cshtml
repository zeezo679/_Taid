@model Demo.ViewModel.RegisterViewModel

<!-- Username Field -->
<div class="mb-2">
    <label asp-for="Username" class="form-label fw-semibold" style="color: #1e293b; font-size: 0.9rem;">Username</label>
    <input asp-for="Username"
           class="form-control rounded-3 border-2"
           placeholder="Enter your username"
           style="border-color: #e2e8f0; background-color: #ffffff; color: #000000; padding: 0.5rem 0.75rem; font-size: 0.9rem;"
           autocomplete="off" />
    <span asp-validation-for="Username" class="text-danger" style="font-size: 0.8rem;"></span>
</div>

<!-- Email Field -->
<div class="mb-2">
    <label asp-for="Email" class="form-label fw-semibold" style="color: #1e293b; font-size: 0.9rem;">Email</label>
    <input asp-for="Email"
           class="form-control rounded-3 border-2"
           placeholder="john@example.com"
           style="border-color: #e2e8f0; background-color: #ffffff; color: #000000; padding: 0.5rem 0.75rem; font-size: 0.9rem;"
           autocomplete="off" />
    <span asp-validation-for="Email" class="text-danger" style="font-size: 0.8rem;"></span>
</div>

