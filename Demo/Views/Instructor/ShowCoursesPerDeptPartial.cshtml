@using Demo.ViewModel
@model InstructorViewModel
@{
    var selectItems = new SelectList(Model.itemList, "Id", "Name");
    var courses = Model.itemList;
}

@if (courses != null && courses.Any())
{
    <div class="row g-3">
        <div class="col-12">
            <small class="text-muted d-flex align-items-center">
                <i data-feather="info" class="icon-sm me-1"></i>
                Found @courses.Count course(s) in this department
            </small>
        </div>
        <div>
            <select asp-for="CourseId" asp-items="selectItems">
                <option value="-1">Select a course from below</option>
            </select>
        </div>
        @* Display all course details in a nice grid *@
        <div class="col-12 mt-3">
            <div class="row g-2">
                @foreach (var course in courses)
                {
                    <div class="col-md-4">
                        <div class="card border-0 bg-white shadow-sm">
                            <div class="card-body p-3">
                                <h6 class="card-title mb-2 text-primary">@course.Name</h6>
                                <div class="d-flex justify-content-between">
                                    <small class="text-muted">Max: @course.Degree</small>
                                    <small class="text-muted">Min: @course.MinDegree</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info d-flex align-items-center">
        <i data-feather="info" class="me-2"></i>
        <div>
            <strong>No courses found</strong><br>
            <small>This department doesn't have any courses assigned yet.</small>
        </div>
    </div>
}