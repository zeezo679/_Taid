@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeIn mb-5">
    <div class="card-header bg-gradient-primary-to-secondary text-white p-4">
        <div class="d-flex align-items-center">
            <div class="p-3 bg-white bg-opacity-25 rounded-circle me-4">
                <i data-feather="shield" class="text-white" style="width: 32px; height: 32px;"></i>
            </div>
            <div>
                <h1 class="display-6 fw-bold mb-0">Privacy Policy</h1>
                <p class="mb-0 opacity-75">Your privacy is important to us</p>
            </div>
        </div>
    </div>
    
    <div class="card-body p-4 p-lg-5">
        <!-- Introduction -->
        <div class="alert alert-info bg-info bg-opacity-10 border-0 rounded-3 mb-5">
            <div class="d-flex">
                <div class="p-2 bg-info bg-opacity-25 rounded-circle me-3">
                    <i data-feather="info" class="text-info" style="width: 20px; height: 20px;"></i>
                </div>
                <div>
                    <h5 class="fw-semibold mb-1">About This Policy</h5>
                    <p class="mb-0 text-secondary">This privacy policy explains how we collect, use, and protect your personal information.</p>
                </div>
            </div>
        </div>
        
        <!-- Main sections in cards without hover effects -->
        <div class="row g-4 mb-5">
            <div class="col-lg-6">
                <div class="card h-100 border-0 shadow-sm rounded-3">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="p-2 bg-primary bg-opacity-10 rounded-circle me-3">
                                <i data-feather="database" class="text-primary" style="width: 20px; height: 20px;"></i>
                            </div>
                            <h2 class="h4 fw-bold mb-0">Information We Collect</h2>
                        </div>
                        <p class="card-text text-secondary">
                            We collect information you provide directly to us, such as when you create an account, 
                            fill out forms, or communicate with us. This may include your name, email address, 
                            and other contact information.
                        </p>
                        <div class="mt-3 small">
                            <span class="badge bg-light text-dark me-1">Personal Data</span>
                            <span class="badge bg-light text-dark me-1">Contact Info</span>
                            <span class="badge bg-light text-dark">Account Details</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="card h-100 border-0 shadow-sm rounded-3">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="p-2 bg-success bg-opacity-10 rounded-circle me-3">
                                <i data-feather="eye" class="text-success" style="width: 20px; height: 20px;"></i>
                            </div>
                            <h2 class="h4 fw-bold mb-0">How We Use Your Information</h2>
                        </div>
                        <div class="text-secondary mb-3">
                            We use the information we collect to:
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-transparent border-top-0 border-start-0 border-end-0 ps-0 py-2">
                                <i data-feather="check-circle" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                Provide, maintain, and improve our services
                            </li>
                            <li class="list-group-item bg-transparent border-start-0 border-end-0 ps-0 py-2">
                                <i data-feather="check-circle" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                Process transactions and send related information
                            </li>
                            <li class="list-group-item bg-transparent border-start-0 border-end-0 ps-0 py-2">
                                <i data-feather="check-circle" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                Send technical notices and support messages
                            </li>
                            <li class="list-group-item bg-transparent border-start-0 border-end-0 border-bottom-0 ps-0 py-2">
                                <i data-feather="check-circle" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                Respond to your comments and questions
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row g-4 mb-5">
            <div class="col-lg-6">
                <div class="card h-100 border-0 shadow-sm rounded-3">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="p-2 bg-danger bg-opacity-10 rounded-circle me-3">
                                <i data-feather="lock" class="text-danger" style="width: 20px; height: 20px;"></i>
                            </div>
                            <h2 class="h4 fw-bold mb-0">Information Security</h2>
                        </div>
                        <p class="card-text text-secondary">
                            We implement appropriate technical and organizational measures to protect your 
                            personal information against unauthorized access, alteration, disclosure, or destruction.
                        </p>
                        <div class="alert alert-success bg-success bg-opacity-10 border-0 mt-3 mb-0">
                            <div class="d-flex align-items-center">
                                <i data-feather="shield" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                Your data is encrypted and securely stored
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="card h-100 border-0 shadow-sm rounded-3">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="p-2 bg-primary bg-opacity-10 rounded-circle me-3">
                                <i data-feather="mail" class="text-primary" style="width: 20px; height: 20px;"></i>
                            </div>
                            <h2 class="h4 fw-bold mb-0">Contact Us</h2>
                        </div>
                        <p class="card-text text-secondary mb-3">
                            If you have any questions about this Privacy Policy, please contact our data protection team.
                        </p>
                        <div class="d-grid gap-2">
                            <a href="mailto:privacy@demo.com" class="btn btn-outline-primary d-flex align-items-center justify-content-center gap-2">
                                <i data-feather="mail" style="width: 16px; height: 16px;"></i>
                                privacy@demo.com
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Agreement section -->
        <div class="card border-0 bg-primary bg-opacity-10 rounded-4 mb-0">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="privacyAgreement">
                        <label class="form-check-label" for="privacyAgreement">
                            I have read and agree to the Privacy Policy
                        </label>
                    </div>
                    <button id="acceptPolicy" class="btn btn-primary px-4" disabled>Accept</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize icons
        feather.replace();
        
        // Privacy policy agreement checkbox
        document.getElementById('privacyAgreement').addEventListener('change', function() {
            document.getElementById('acceptPolicy').disabled = !this.checked;
        });
        
        // Accept button
        document.getElementById('acceptPolicy').addEventListener('click', function() {
            alert('Thank you for accepting our privacy policy!');
            // In a real app, you would store this consent in a database or cookie
        });
    </script>
}
